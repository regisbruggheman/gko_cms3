<%
   title = record.title || "!(#{record.read_attribute(:title, default_locale)})"
%>
<td><%= published_status(record) + glink_to(title, url_for([:edit, :admin, current_site, record.section, record])) %></td>
<%= content_tag_for_actions do  %>
	<%= icons_to_actions([:destroy, :edit], record) %>
    <%= icon_to_view(url_for([record.section, record])) if resource.persisted? %>
<% end  %>