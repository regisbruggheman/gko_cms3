<%
   has_stickers = @stickers.try(:any?)
   has_categories = @categories.try(:any?)
%>
<div class="dates event">
  <span class="day"><%= @event.start_date.strftime("%a") %></span>
  <span class="day_num"><%= @event.start_date.strftime("%d") %></span>
  <span class="month"><%= @event.start_date.strftime("%b") %></span>
</div>
<%= page_title(@event.title) %>
<%= render_html_text(@event.body) if @event.body.present? %>
<% if has_stickers || has_categories %>
    <div class='metas'>
      <%= render('/categories/shared/meta_list', :categories => @categories) if has_categories %>
      <%= render('/stickers/shared/meta_list', :stickers => @stickers) if has_stickers %>
    </div>
<% end %>