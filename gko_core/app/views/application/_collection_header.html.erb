<%
   title = if @category
             t("#{resource_collection_name}.titles.in_categories", :name => @category.title, :default => parent.title)
           elsif @tag
             t("#{resource_collection_name}.titles.tagged", :name => @tag.name, :default => parent.title)
           else
             parent.title
           end
%>
<article class="header">
  <%= render_page_title(title) %>
  <%= render_slideshow_for(parent) %>
  <%= render_html_text(parent.body) %>
</article>
