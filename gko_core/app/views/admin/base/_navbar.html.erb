<%# cache(["admin", site, current_user, "navbar"]) do %>
<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
    	<div class="container">
      		<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        		<span class="icon-bar"></span>
        		<span class="icon-bar"></span>
        		<span class="icon-bar"></span>
      		</a>
			<% if current_site && current_site.persisted? %>
			<a class="brand" href="#"><%= "Administration: #{current_site.labelize}".html_safe %></a>
			<% else %>
			<a class="brand" href="#"><%= "Administration: Comptes".html_safe %></a>
			<% end %>
			<%= render "navbar_nav" %>
		</div>
	</div>
  <%= render "main_nav" %>
</header>
<%# end %>