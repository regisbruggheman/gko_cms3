<div id="add-page-modal" class='modal fade'>
	<div class='modal-header'>
	    <a class="close" data-dismiss="modal">&times;</a>
	    <h3 class="modal-title">Choisissez un mod√®le de page</h3>
	</div>
	<div class='modal-body'>
		<ul class="nav nav-pills nav-stacked">
		<% current_site.page_types.map do |name| %>
			<% if page = Gko::Core.page_types.find_by_name(name) %>
			<li>
				
				<%= link_to(send(:"new_admin_site_#{page.name}_path")) do %>
					<%= "<i class='icon-#{page.icon}'></i>".html_safe %>
					<%= t("activerecord.models.#{page.name}") %>
				<% end %>
				<div><%= t(:"admin.#{page.name.pluralize}.help") %></div>
			</li>
			<% end %>
		<% end %>
		<% Section.type_names.map do |type| %>
			<li>
				<h3><%= link_to(t(:"activerecord.models.#{type}"), send(:"new_admin_site_#{type}_path")) %></h3>
				<div><%= t(:"admin.#{type.pluralize}.help") %></div>
			</li>
		<% end %> 
		</ul>
	</div>
</div>