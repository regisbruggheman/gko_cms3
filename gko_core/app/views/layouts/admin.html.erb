<!DOCTYPE html>
<%= render "layouts/admin/head" %>
<body id="admin">
<!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->
<%= render "navbar" %>
<div class="container-fluid" id="main-container">
	
	<% if display_language_links? %>
	<div class="row-fluid">
		<div class="span12"><%= render "translate_tabs" %></div>
	</div>
	<% end %>
	
	<div class="row-fluid">
    <div class="span12">
      <div class="header <%= 'translating' if display_language_links? %>">
        <div class="pull-left">
          <% if content_for?(:page_title) -%>
            <%= yield :page_title -%>
          <% else -%>
             <%= content_tag(:h1, t("admin.#{controller_name}.titles.#{action_name}").html_safe, :class => "page-title") -%>
          <% end -%>
        </div>
        <% if content_for?(:actions) -%>
          <div class="pull-right actions"><%= yield :actions -%></div>
        <% end -%>
      </div>
    </div>  
	</div>
	
	<% if content_for?(:search_form) -%>
    <!-- search -->
  	<div class="row-fluid">
  		<div class="span12 search-container">
  		  <div class="pull-right"><%= yield :search_form -%></div>
  		</div>
  	</div>
  	<% if content_for?(:advanced_search_form) -%>
      <div class='row-fluid hide' id="advanced-search-toggle">
        <div class="span12 advanced-search-container"><%= yield :advanced_search_form -%></div>
      </div>  
    <% end -%> 
    <!-- end search -->
	<% end -%>
	
	<!-- content -->
	<div class="row-fluid">
		<div class="span12 body">
			<%= render "flash", :messages => flash if flash.any? -%>
			<%= yield %>
		</div>
	</div>
	<!-- end content -->
	<!-- footer -->
	<footer class="row-fluid">
		<div class="span12">
      <p><small><%= link_to("copyright ©#{Time.now.year} joufdesign. tous droits réservés. Gko cms platform V".html_safe, "http://joufdesign.com") %></small></p>
		</div>
	</footer>
	<!-- end footer -->
</div>
<%= render "confirm_dialog" %>
</body>
</html>