<ul class="nav login-bar">
  <% if current_user %>
<%# FIXME Site.multi_sites_enabled is not a right way, we should have a multi-account enabled  or something like that %>
      <% if Site.multi_sites_enabled %>
          <li><%= link_to t(:my_account), user_path(current_user) %></li>
      <% end %>
      <li><%= link_to t(:logout), destroy_user_session_path %></li>
  <% else %>
      <li><%= link_to t(:log_in), login_path %></li>
  <% end %>
</ul>
