<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Bootstrap, from Twitter</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="">
  <%= stylesheet_link_tag 'gko_theme_roller_all' %>
<%#= stylesheet_link_tag 'bootstrap-all.less', :rel => 'stylesheet/less' %>
  <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  <!-- Le javascript
 ================================================== -->
  <!-- Placed at the end of the document so the pages load faster -->
  <%= javascript_tag do -%>
      less = { env: 'development' };
  <% end -%>
  <%= javascript_include_tag("gko_theme_roller_all.js") -%>
  <%#= render "shared/ace_editor", :language => 'css' %>
  <%= yield :head %>
</head>

<body data-spy="scroll" data-target="#properties_panel" data-offset="50">

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">Customize <%= @theme.name %></a>

      <div class="nav-collapse">
        <ul class="nav">
          <li class="active"><a href="#">Home</a></li>
          <li><a href="<%= load_admin_theme_path(@theme) %>" data-remote="true" id="load-theme">Bootstrap</a></li>
          <li><a href="#preview" data-link="<%= preview_admin_theme_path(@theme) %>">Live preview</a></li>
        </ul>
        <p class="navbar-text pull-right">
          <a href="<%= admin_themes_path %>" id="back-themes-btn" class="btn btn-danger">Back to themes
            list</a><a href="#" id="finish-and-save-btn" class="btn btn-success">Finish and save changes</a></p>
      </div>
      <!--/.nav-collapse -->
    </div>
  </div>
</div>

<iframe id="frame" src="<%= default_admin_theme_path(@theme) %>" onload="init_theme()"></iframe>
<a class="btn btn-inverse" id="toogle-panel-btn" href="#"><i class="icon-arrow-left icon-white"></i></a>
<%= render "themes/shared/bootstrap_panel" %>
<div class="modal hide fade" id="result-modal">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>

    <h3>Get codes</h3>
  </div>
  <div class="modal-body">
    <ul class="nav nav-tabs tabs">
      <li class="active"><a href="#" data-toggle="tab" data-target="#tab-css">CSS</a></li>
      <li><a href="#" data-toggle="tab" data-target="#tab-less">LESS</a></li>
      <li><a href="#" data-toggle="tab" data-target="#tab-sass">SASS</a></li>
    </ul>
    <div class='tab-content'>
      <div id='tab-css' class='tab-pane active'>
        <pre id='tab-css-content' class="ace_editor"></pre>
      </div>
      <div id='tab-less' class='tab-pane'>
        <pre id='tab-less-content'></pre>
      </div>
      <div id='tab-sass' class='tab-pane'>
        <pre id='tab-sass-content'></pre>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn">Close</a>
    <a href="#" class="btn btn-primary">Save changes</a>
  </div>
</div>

</body>
</html>